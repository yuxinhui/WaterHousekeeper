<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/leftmenu_lxzt_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_lvxinzhangtai"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="查看滤芯状态"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftmenu_myzd_ll"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_myzd"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="我的账单"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftmenu_mysz_ll"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_mysz"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="我的设置"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftmenu_jiqisz_ll"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_jiqisz"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="机器设置"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftmenu_kscz_ll"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_kscz"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="快速充值"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leftmenu_yjfx_ll"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/leftmenu_yjfx"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="一键分享"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>