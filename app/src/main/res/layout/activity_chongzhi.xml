<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="#48baef">

        <ImageView
            android:id="@+id/fanhui_img"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:text="充值中心"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.93"
        android:background="#F2F2F2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/qita_et"
                android:hint="其它金额"
                android:textColorHint="#cccccc"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/chongzhi_edit_style"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#a6a5a5"
                    android:text="余额:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/yue_tv"
                    android:textColor="#a6a5a5"
                    android:text="2625元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/yibai_img"
                    android:layout_weight="1"
                    android:src="@mipmap/chongzhi_100_01"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/erbai_img"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/chongzhi_200_02"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/sanbai_img"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/chongzhi_300_02"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/wubai_img"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/chongzhi_500_02"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:text="微信支付:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/zhifu_tv"
                    android:textColor="#f7792b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/lijichongzhi_btn"
                android:layout_marginTop="8dp"
                android:text="立即充值"
                android:background="#48baef"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>