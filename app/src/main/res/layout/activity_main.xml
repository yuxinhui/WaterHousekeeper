<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.jinfukeji.waterhousekeeper.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/zhuyebeijing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/kaiguan_img"
                android:layout_margin="5dp"
                android:layout_width="25dp"
                android:src="@mipmap/guanbi"
                android:layout_height="25dp" />
            <TextView
                android:gravity="center"
                android:text="系统主界面"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/kaiguan_img"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/shuaxin_img"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@mipmap/shuaxin"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <Button
                android:id="@+id/chongxi_btn"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_width="100dp"
                android:text="冲洗"
                android:background="@drawable/buttonstyle"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="0.35"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:id="@+id/jiqizhishui_ll"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/jiqizhishui_cai"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:text="机器制水"
                            android:textColor="#3FA8F4" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jiqishuiman_ll"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/jiqishuiman_hui"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:text="机器水满"
                            android:textColor="#828282"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jiqiqueshui_ll"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/jiqiqueshui_hui"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:text="机器缺水"
                            android:textColor="#828282"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:id="@+id/jiqiOk_ll"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/jiqiok_hui"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:text="机器正常"
                            android:textColor="#828282"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jiqiguzhang_ll"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/jiqiguzhang_hui"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:text="机器故障"
                            android:textColor="#828282"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/jiqiyichang_ll"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/jiqiyichang_hui"
                            android:layout_width="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="50dp" />
                        <TextView
                            android:text="机器异常"
                            android:textColor="#828282"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <fragment
        android:id="@+id/left_menu"
        android:name="com.jinfukeji.waterhousekeeper.fragment.MenuLeftFragment"
        android:layout_gravity="start"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_left_menu"
        android:tag="LEFT"/>
</android.support.v4.widget.DrawerLayout>
