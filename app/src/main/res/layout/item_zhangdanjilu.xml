<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:src="@mipmap/weixintubiao"
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_jilu_payway_tv"
            android:text="微信支付"
            android:textColor="#12B7F5"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_jilu_date_tv"
            android:textColor="#12B7F5"
            android:text="2016-11-14"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_jilu_money_tv"
            android:text="-26.00"
            android:textColor="#12B7F5"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_jilu_date_tv" />
    </RelativeLayout>
</LinearLayout>