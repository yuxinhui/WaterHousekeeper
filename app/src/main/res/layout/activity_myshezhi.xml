<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F7F7F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#48baef">

        <ImageView
            android:id="@+id/fanhui_img"
            android:layout_width="25dp"
            android:layout_marginStart="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的设置"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="姓名"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/myshezhi_name_et"
                android:background="@null"
                android:layout_weight="0.8"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="#F7F7F9"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="性别"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/myshezhi_sex_et"
                android:background="@null"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="#F7F7F9"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/myshezhi_shengri_ll"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="出生日期"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myshezhi_shengri_tv"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="手机"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/myshezhi_phone_et"
                android:background="@null"
                android:layout_weight="0.8"
                android:inputType="phone"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="#F7F7F9"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="QQ"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/myshezhi_qq_et"
                android:background="@null"
                android:layout_weight="0.8"
                android:inputType="number"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="#F7F7F9"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="微信"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/myshezhi_wx_et"
                android:background="@null"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/diqu_rl"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="区域"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myshezhi_quyu_et"
                android:layout_weight="0.8"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="#F7F7F9"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textColor="#000000"
                android:text="详细地址"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myshezhi_address_et"
                android:layout_weight="0.8"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/up_btn"
                android:layout_weight="1"
                android:background="@mipmap/wodeshezhi_queren"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/quxiao_btn"
                android:background="@mipmap/wodeshezhi_quxiao"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>